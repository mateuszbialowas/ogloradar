<div class="grid place-items-center h-[calc(100vh-8rem)]">
  <% if searches.empty? %>
    <%= link_to new_search_path, class: 'flex items-center justify-center text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-4 py-2 focus:outline-none', data: { turbo: false } do %>
      <%= inline_svg_tag('icons/plus.svg', class: 'h-3.5 w-3.5 mr-2') %>
      Dodaj wyszukiwanie
    <% end %>
  <% else %>
    <div class="shadow bg-white p-8 max-w-lg rounded-lg grid grid-cols-2 gap-4">
      <div class="flex flex-col items-center justify-center">
        <%= content_tag :p, searches.size, class: 'text-center text-3xl font-extrabold' %>
        <%= content_tag :p, 'Wszystkie wyszukiwania', class: 'text-center text-md text-gray-500' %>
      </div>
      <div class="flex flex-col items-center justify-center">
        <%= content_tag :p, products.size, class: 'text-center text-3xl font-extrabold' %>
        <%= content_tag :p, 'Wszystkie wyszukane produkty', class: 'text-center text-md text-gray-500' %>
      </div>
      <div class="flex flex-col items-center justify-center">
        <%= content_tag :p, l(products.last.created_at, format: :short), class: 'text-center text-3xl font-extrabold' %>
        <%= content_tag :p, 'Ostatni pobrany produkt', class: 'text-center text-md text-gray-500' %>
      </div>

    </div>
  <% end %>
</div>
