<% if theme.eql?(:default) %>
  <nav class="flex m-4" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
      <%= render_breadcrumbs builder: CustomBreadcrumbsBuilder %>
    </ol>
  </nav>
<% else %>
  <nav class="flex m-4 px-5 py-3 text-gray-700 border border-gray-200 rounded-lg bg-gray-50 sm:w-fit max-w-[calc(100%-1rem)]" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3 overflow-x-scroll">
      <%= render_breadcrumbs builder: CustomBreadcrumbsBuilder %>
    </ol>
  </nav>
<% end %>

