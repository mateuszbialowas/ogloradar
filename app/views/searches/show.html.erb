<header class="bg-white shadow">
  <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
    <%= render 'shared/breadcrumbs' %>
    <%= content_tag :h1, search.name, class: 'text-3xl font-bold tracking-tight text-gray-900' %>
  </div>
</header>

<%= render 'searches/search_navbar', search: %>

<section class="mx-auto max-w-screen-xl">
  <div class="py-8 px-4 max-w-2xl lg:py-16">
    <dl>
      <%= content_tag :dt, Search.human_attribute_name(:name), class: 'mb-2 font-semibold leading-none text-gray-900' %>
      <%= content_tag :dd, search.name, class: 'mb-4 font-light text-gray-500 sm:mb-5' %>
    </dl>
    <dl>
      <%= content_tag :dt, Search.human_attribute_name(:uri), class: 'mb-2 font-semibold leading-none text-gray-900' %>
      <%= content_tag :dd, class: 'mb-4 font-light text-gray-500 sm:mb-5 break-words' do %>
        <%= link_to search.uri, search.uri, class: 'underline hover:text-primary-500' %>
      <% end %>
    </dl>
    <dl>
      <%= content_tag :dt, Search.human_attribute_name(:status), class: 'mb-2 font-semibold leading-none text-gray-900' %>
      <%= content_tag :dd, search.status, class: 'mb-4 font-light text-gray-500 sm:mb-5' %>
    </dl>
    <div class="flex items-center space-x-4">
      <%= link_to edit_search_path(search), class: 'text-white inline-flex items-center bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center' do %>
        <svg aria-hidden="true" class="mr-1 -ml-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
          <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z"></path>
          <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd"></path>
        </svg>
        Edytuj
      <% end %>

      <%= button_to search, method: :delete, class: 'inline-flex items-center text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center' do %>
        <svg aria-hidden="true" class="w-5 h-5 mr-1.5 -ml-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path>
        </svg>
        Usu≈Ñ
      <% end %>

      <%= button_to 'Pobierz produkty teraz', search_product_fetch_path(search),
                    class: 'py-2.5 px-5 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200' %>
    </div>
  </div>
</section>
