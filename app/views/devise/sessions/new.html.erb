<section class="bg-gray-50 h-full">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto min-h-screen lg:py-0">
    <%= link_to root_path, class: 'flex items-center mb-6 text-3xl font-semibold text-gray-900' do %>
      <%= image_tag 'logo.svg', class: 'h-12 mr-2', alt: 'logo' %>
      OgloRadar
    <% end %>
    <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
          Zaloguj się
        </h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-4 md:space-y-6' }) do |f| %>
          <div>
            <%= render Forms::LabelComponent.new(form: f, method: :email) %>
            <%= render Forms::EmailFieldComponent.new(form: f, method: :email) %>
          </div>

          <div>
            <%= render Forms::LabelComponent.new(form: f, method: :password, label: 'Hasło') %>
            <%= render Forms::PasswordFieldComponent.new(form: f, method: :password, autocomplete: 'current-password') %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-start">
              <div class="flex items-center h-5">
                <%= f.check_box :remember_me, class: 'w-4 h-4 border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300' %>
              </div>
              <div class="ml-3 text-sm">
                <%= f.label :remember_me, 'Zapamiętaj dane logowania', class: 'font-medium text-gray-500' %>
              </div>
            </div>
          <% end %>

          <%= f.submit 'Zaloguj się', class: 'w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center' %>
          <p class="text-sm font-light text-gray-500">
            <%= render 'devise/shared/links' %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</section>
