<section class="bg-gray-50 h-full">
  <div class="flex flex-col h-full items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <%= link_to root_path, class: 'flex items-center mb-6 text-3xl font-semibold text-gray-900' do %>
      <%= image_tag 'logo.svg', class: 'h-12 mr-2', alt: 'logo' %>
      OgloRadar
    <% end %>
    <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
          Utwórz konto
        </h1>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'space-y-4 md:space-y-6' }) do |f| %>
          <%= render 'devise/shared/error_messages', resource: %>

          <div>
            <%= render Forms::LabelComponent.new(form: f, method: :email, label: 'Twój email') %>
            <%= render Forms::EmailFieldComponent.new(form: f, method: :email) %>
            <%= render Forms::ErrorsComponent.new(resource: resource, method: :email) %>
          </div>

          <div>
            <%= render Forms::LabelComponent.new(form: f, method: :password, label: 'Hasło') %>
            <%= render Forms::PasswordFieldComponent.new(form: f, method: :password, placeholder: '••••••••') %>
            <%= render Forms::ErrorsComponent.new(resource: resource, method: :password) %>
            <% if @minimum_password_length %>
              <%= content_tag :p, "Minimum #{@minimum_password_length} znaków", class: 'mt-2 text-sm text-gray-500 dark:text-gray-400' %>
            <% end %>
          </div>

          <div>
            <%= render Forms::LabelComponent.new(form: f, method: :password_confirmation, label: 'Potwierdź hasło') %>
            <%= render Forms::PasswordFieldComponent.new(form: f, method: :password_confirmation, placeholder: '••••••••') %>
            <%= render Forms::ErrorsComponent.new(resource: resource, method: :password_confirmation) %>
          </div>

          <div class="flex items-start">
            <div class="flex items-center h-5">
              <input id="terms" aria-describedby="terms" type="checkbox" class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300" required="">
            </div>
            <div class="ml-3 text-sm">
              <label for="terms" class="font-light text-gray-500">
                Akceptuję
                <%= link_to 'politykę prywatności', '#', class: 'font-medium text-primary-600 hover:underline' %>
              </label>
            </div>
          </div>
          <button type="submit" class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
            Zarejestruj się
          </button>
          <p class="text-sm font-light text-gray-500">
            Masz już konto?
            <%= render 'devise/shared/links' %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</section>
