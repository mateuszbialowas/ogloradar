<section class="bg-gray-50 h-full">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <div class="flex items-center mb-6 text-3xl font-semibold text-gray-900">
      <%= image_tag 'logo.svg', class: 'h-12 mr-2', alt: 'logo' %>
      OgloRadar
    </div>
    <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
          Utwórz konto
        </h1>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'space-y-4 md:space-y-6' }) do |f| %>
          <%= render 'devise/shared/error_messages', resource: %>

          <div>
            <%= f.label :email, 'Twój email', class: 'block mb-2 text-sm font-medium text-gray-900' %>
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5' %>
          </div>
          <div>
            <%= f.label :password, 'Hasło', class: 'block mb-2 text-sm font-medium text-gray-900' %>
            <%= f.password_field :password, autocomplete: 'new-password', placeholder: '••••••••', class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5' %>
            <% if @minimum_password_length %>
              <%= content_tag :p, "Minimum #{@minimum_password_length} znaków", class: 'mt-2 text-sm text-gray-500 dark:text-gray-400' %>
            <% end %>
          </div>
          <div>
            <%= f.label :password_confirmation, 'Potwierdź hasło', class: 'block mb-2 text-sm font-medium text-gray-900' %>
            <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: '••••••••', class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5' %>
          </div>
          <div class="flex items-start">
            <div class="flex items-center h-5">
              <input id="terms" aria-describedby="terms" type="checkbox" class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300" required="">
            </div>
            <div class="ml-3 text-sm">
              <label for="terms" class="font-light text-gray-500">I accept the
                <a class="font-medium text-primary-600 hover:underline" href="#">Terms and Conditions</a></label>
            </div>
          </div>
          <button type="submit" class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
            Zarejestruj się
          </button>
          <p class="text-sm font-light text-gray-500">
            Masz już konto?
            <%= render 'devise/shared/links' %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</section>
