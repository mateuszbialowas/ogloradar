<section class="bg-gray-50 h-full">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto min-h-screen lg:py-0">
    <%= link_to root_path, class: 'flex items-center mb-6 text-3xl font-semibold text-gray-900' do %>
      <%= image_tag 'logo.svg', class: 'h-12 mr-2', alt: 'logo' %>
      OgloRadar
    <% end %>
    <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
          Zmień hasło
        </h1>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'space-y-4 md:space-y-6' }) do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <div>
            <%= render Forms::LabelComponent.new(form: f, method: :password, label: 'Nowe hasło') %>
            <%= render Forms::PasswordFieldComponent.new(form: f, method: :password, placeholder: '••••••••') %>
            <%= render Forms::ErrorsComponent.new(resource:, method: :password) %>
            <% if @minimum_password_length %>
              <%= content_tag :p, "Minimum #{@minimum_password_length} znaków", class: 'mt-2 text-sm text-gray-500 dark:text-gray-400' %>
            <% end %>
          </div>

          <div>
            <%= render Forms::LabelComponent.new(form: f, method: :password_confirmation, label: 'Potwierdź nowe hasło') %>
            <%= render Forms::PasswordFieldComponent.new(form: f, method: :password_confirmation, placeholder: '••••••••') %>
            <%= render Forms::ErrorsComponent.new(resource:, method: :password_confirmation) %>
          </div>

          <%= f.submit 'Zmień moje hasło', class: 'w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center' %>
          <p class="text-sm font-light text-gray-500">
            <%= render 'devise/shared/links' %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</section>
